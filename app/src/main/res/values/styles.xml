<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textViewStyle">@style/AppTheme</item>
    </style>
    <style name="mySpinnerItemStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/show_dialog</item>
        <item name="android:windowExitAnimation">@anim/hide_dialog</item>
    </style>
</resources>
