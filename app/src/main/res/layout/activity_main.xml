<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgmain"
    tools:context="com.example.rog.mcpix.MainActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="9dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="#FFF"
            android:id="@+id/cv1"
            android:layout_weight="1"
            android:onClick=""
            >

            <RelativeLayout
                android:id="@+id/top_matkul"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/img_matkul"
                    android:translationZ="1dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/matkul"
                    android:layout_marginBottom="27dp"
                    android:layout_above="@+id/menu_matkul"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:translationZ="1dp"
                    android:id="@+id/menu_matkul"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:background="#2a2c44"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="Mata Kuliah"
                    android:textColor="#fff"
                    android:textSize="13sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="9dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="#FFF"
            android:id="@+id/cv2"
            android:layout_weight="1"
            >

            <RelativeLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/img_jadwal"
                    android:translationZ="1dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/jadwal"
                    android:layout_marginBottom="27dp"
                    android:layout_above="@+id/menu_jadwal"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:translationZ="1dp"
                    android:id="@+id/menu_jadwal"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:background="#2a2c44"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="Jadwal"
                    android:textColor="#fff"
                    android:textSize="13sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="9dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="#FFF"
            android:id="@+id/cv3"
            android:layout_weight="1"
            >

            <RelativeLayout
                android:id="@+id/top_gallery"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/img_gallery"
                    android:translationZ="1dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/gallery"
                    android:layout_marginBottom="27dp"
                    android:layout_above="@+id/menu_gallery"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:translationZ="1dp"
                    android:id="@+id/menu_gallery"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:background="#2a2c44"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="Gallery"
                    android:textColor="#fff"
                    android:textSize="13sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="9dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="#FFF"
            android:id="@+id/cv4"
            android:layout_weight="1"
            >

            <RelativeLayout
                android:id="@+id/top_nilai"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/img_nilai"
                    android:translationZ="1dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/nilai"
                    android:layout_marginBottom="27dp"
                    android:layout_above="@+id/menu_nilai"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:translationZ="1dp"
                    android:id="@+id/menu_nilai"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:background="#2a2c44"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="Nilai"
                    android:textColor="#fff"
                    android:textSize="13sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/FAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@android:color/holo_orange_light"
        app:elevation="7dp"
        app:fabSize="normal"
        app:layout_anchor="@+id/main"
        app:layout_anchorGravity="bottom|right"
        app:srcCompat="@android:drawable/ic_menu_camera"
        app:useCompatPadding="true" />

</android.support.design.widget.CoordinatorLayout>
